set -eu

on_exit()
{
    ## No need to short-circuit exit on error anymore: we are already cleaning
    ## up and exiting.
    set +e

    if [ -n "${workdir}" ]; then
        rm -rf "${workdir}" || exitval=$?
    fi

    exit $exitval
}

usage_error()
{
    echo "error: $1" >&2
    echo "Try '$0 --help' for more information". >&2
    return 1
}

while [ $# -gt 0 ]; do
    case $1 in
        -h|--help)
            shift
            echo "Usage: $0 PNG"
            echo
            echo "Try to find the given image from the current screen."
            echo
            echo "Options:"
            echo "    -h, --help                   print help and exit"
            echo
            exit 0
            ;;
        --)
            shift
            break
            ;;
        -*)
            usage_error "invalid option '$1'"
            ;;
        *)
            break
            ;;
    esac
done

if [ $# -ne 1 ]; then
    usage_error "invalid number of arguments ($#), expected 1"
fi

png=$(readlink -e "$1") || {
    echo "E: image '$1' does not exist" >&2
    exit 1
}
shift

exitval=1
workdir=''

# After this point, we are going to make permanent changes, hence we
# setup cleanup hook to make sure we do not leave anything behind us.

trap on_exit EXIT

workdir=$(mktemp -d)

cd "${workdir}"

escrotum screenshot.png >/dev/null || {
    echo "E: failed to take a screenshot" >&2
    exit 1
}

visgrep screenshot.png "${png}" | sed -nr 's/^([0-9]+),([0-9]+) .*$/\1 \2/p'

exitval=0
