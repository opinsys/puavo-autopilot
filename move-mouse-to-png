#!/bin/bash

on_exit()
{
    local exitval=$?

    if [ -n "${workdir}" ]; then
        rm -rf "${workdir}" || exitval=$?
    fi

    exit $exitval
}

if [ $# -ne 1 ]; then
    echo "E: missing argument" >&2
    echo "Usage: $0 PNGFILE" >&2
    exit 1
fi

detect_png=$(readlink -e "$1")
if [ $? -ne 0 ]; then
    echo "E: '$1' does not exist" >&2
    exit 1
fi

workdir=''

# After this point, we are going to make permanent changes, hence we
# setup cleanup hook to make sure we do not leave anything behind us.

trap on_exit EXIT

workdir=$(mktemp -d)

cd "${workdir}"

scrot screenshot.png || {
    echo "E: failed to take a screenshot" >&2
    exit 1
}

coords=$(visgrep screenshot.png "${detect_png}" \
    | head -n1 \
    | sed -nr 's/^([0-9]+),([0-9]+) .*$/\1 \2/p')
if [ -z "${coords}" ]; then
    echo "E: image not detected" >&2
    exit 1
fi

xte "mousemove ${coords}" || {
    echo "E: failed to move the mouse cursor" >&2
    exit 1
}

exit 0
