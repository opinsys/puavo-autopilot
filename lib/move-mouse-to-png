set -eu

if [ $# -ne 1 ]; then
    echo "E: missing argument" >&2
    echo "Usage: $0 PNG" >&2
    exit 1
fi

png=$1
shift

coords=$(puavo-autopilot-detect-png "${png}")
if [ -z "${coords}" ]; then
    echo "E: image '${png}' not detected" >&2
    exit 1
fi

point=$(echo "${coords}" | head -n1)
xte "mousemove ${point}" || {
    echo "E: failed to move the mouse cursor" >&2
    exit 1
}

exit 0
